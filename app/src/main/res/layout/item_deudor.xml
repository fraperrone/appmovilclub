<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido, Nombre"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/genos_medium" />

        <TextView
            android:id="@+id/textViewDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Doc: 12345678"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/genos_medium" />

        <TextView
            android:id="@+id/textViewTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tipo: Socio"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/genos_medium" />

        <TextView
            android:id="@+id/textViewVencimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Vencimiento: 2025-01-01"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/genos_medium" />

        <TextView
            android:id="@+id/textViewDiasVencido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Vencido hace 5 dÃ­a(s)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/genos_medium" />

    </LinearLayout>

</androidx.cardview.widget.CardView>