<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEEE"
    tools:context=".MenuPrincipalActivity">

    <!-- Header con bienvenida -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="#BF3B3B"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido, Usuario"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="@font/genos_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/textCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/genos_medium"
            android:minHeight="34dp"
            android:padding="8dp"
            android:text="Cerrar sesión"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView para el contenido -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/menuContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Botón Realizar Pago -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnPagoContainer"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_button_main_menu"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/btnPagoIcon"
                    android:layout_width="132dp"
                    android:layout_height="132dp"
                    android:src="@drawable/logo_realizar_pago"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/btnPagoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Realizar Pago"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:fontFamily="@font/genos_medium"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/btnPagoIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Botón Registrar Cliente -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnRegistrarContainer"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_button_main_menu"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/btnRegistrarIcon"
                    android:layout_width="132dp"
                    android:layout_height="132dp"
                    android:src="@drawable/logo_registrar_cliente"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/btnRegistrarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar \nCliente"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:fontFamily="@font/genos_medium"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/btnRegistrarIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Botón Ver Afiliados -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnVerContainer"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_button_main_menu"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/btnVerIcon"
                    android:layout_width="132dp"
                    android:layout_height="132dp"
                    android:src="@drawable/logo_ver_afiliados"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/btnVerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Afiliados"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:fontFamily="@font/genos_medium"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/btnVerIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Botón Ver Deudores -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnDeudoresContainer"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_button_main_menu"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/btnDeudoresIcon"
                    android:layout_width="132dp"
                    android:layout_height="132dp"
                    android:src="@drawable/logo_ver_deudores"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/btnDeudoresText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Deudores"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:fontFamily="@font/genos_medium"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/btnDeudoresIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

