<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEEE"
    tools:context=".MenuPrincipalActivity">

    <!-- Contenedor vertical -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="32dp"
        android:baselineAligned="false">

        <!-- Botón 1 -->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnPagoContainer"
            android:layout_width="wrap_content"
            android:layout_height="162dp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_button_main_menu"
            android:layout_marginBottom="16dp"

            >
            <!--            figma medidas contenedor 412 x162-->


            <ImageView
                android:id="@+id/btnPagoIcon"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:src="@drawable/logo_realizar_pago"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"


                />

            <TextView
                android:id="@+id/btnPagoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Realizar Pago"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btnPagoIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>





<!--        <com.google.android.material.button.MaterialButton-->
