<!--            app:cornerRadius="24dp"-->
<!--            app:icon="@drawable/realizar_pago"-->
<!--            app:iconGravity="textStart"-->
<!--            app:iconPadding="8dp"-->

<!--            />-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnRegistrarContainer"
            android:layout_width="wrap_content"
            android:layout_height="162dp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_button_main_menu"
            android:layout_marginBottom="16dp"

            >
            <!--            figma medidas contenedor 412 x162-->


            <ImageView
                android:id="@+id/btnRegistrarIcon"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:src="@drawable/logo_registrar_cliente"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"


                />

            <TextView
                android:id="@+id/btnRegistrarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar Cliente"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btnRegistrarIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Botón 3 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnVerContainer"
            android:layout_width="wrap_content"
            android:layout_height="162dp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_button_main_menu"
            android:layout_marginBottom="16dp"

            >
            <!--            figma medidas contenedor 412 x162-->


            <ImageView
                android:id="@+id/btnVerIcon"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:src="@drawable/logo_ver_afiliados"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"


                />

            <TextView
                android:id="@+id/btnVerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Afiliados"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btnVerIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Botón 4 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnDeudoresContainer"
            android:layout_width="wrap_content"
            android:layout_height="162dp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_button_main_menu"
            android:layout_marginBottom="16dp"

            >
            <!--            figma medidas contenedor 412 x162-->


            <ImageView
                android:id="@+id/btnDeudoresIcon"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:src="@drawable/logo_ver_deudores"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"


                />

            <TextView
                android:id="@+id/btnDeudoresText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Deudores"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/btnDeudoresIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_footer"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:contentDescription="Botón de volver atrás"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>